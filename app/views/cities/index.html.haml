%h1= t('.title')
%p= link_to t('.new_city'), new_city_path

%table
  %thead
    %tr
      %th= City.human_attribute_name :name
      %th= City.human_attribute_name :state
      %th= City.human_attribute_name :country
      %th{:colspan => 3}= t 'actions'
  
  %tbody
    - for city in @cities
      %tr{ :class => cycle(:odd, :even) }
        %td= city.name
        %td= city.state
        %td= city.country
        %td.action= link_to t('show'), city
        %td.action= link_to t('edit'), edit_city_path(city)
        %td.action= link_to t('destroy'), city, :confirm => t('are_you_sure'), :method => :delete
