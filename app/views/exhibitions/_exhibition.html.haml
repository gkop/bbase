- content_for :title, t('.title', :gallery_name => @exhibition.name)

%div#exhibition
  %h1= @exhibition.name
  %h4
    - if @exhibition.curated?
      Officially curated by #{link_to(@exhibition.user.name, @exhibition.user)}, a Golahny expert
    - else
      By #{@exhibition.user ? link_to(@exhibition.user.name, @exhibition.user) : "Anonymous"} 
  - if can? :manage, Settings 
    - if @exhibition.is_on_homepage?
      = t('.assigned_to_homepage')
    - else
      = link_to(t(".assign_to_homepage"), { :controller => 'exhibitions', :action => 'update', :exhibition => { :assigned_to_homepage => "true" } } , :id => @exhibition.id, :method => :put)
    %br

  - @exhibition.artworks.each do |a|
    .exhibition-item
      = link_to bigtoe_image(a), a, :id => a.title
      %br
      = basic_title(a)
      - if can?(:manage, @exhibition)
        %br
          #{link_to(t("remove"), remove_artwork_from_exhibition_path(:id => @exhibition.id, :artwork_id => a.id), :method => :put)}
 
  - if !@exhibition.note.blank?
    .left-aligned.note.wall-of-text
      :markdown
        #{@exhibition.note}

  - if can?(:manage, @exhibition)
    %p
      = link_to t("edit"), edit_exhibition_path(@exhibition)
      |
      = link_to t(".delete"), @exhibition, :confirm => t('are_you_sure'), :method => :delete
