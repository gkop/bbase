%div#exhibition
  %h1= @exhibition.name

  -# TODO show only for authorized users
  - if @exhibition.is_on_homepage?
    This exhibition is currently assigned to the homepage
  - else
    = link_to("Assign to homepage", { :controller => 'exhibitions', :action => 'update', :exhibition => { :assigned_to_homepage => "true" } } , :id => @exhibition.id, :method => :put, :exhibition => { :assigned_to_homepage => "true" })

  %p
    - @exhibition.artworks.each do |a|
      = link_to image_tag(a.image.bigtoe.url), a, :id => a.title
