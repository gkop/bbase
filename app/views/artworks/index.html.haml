- content_for :title, @title || t('.title')

#general
  %h1= @title || t('.title')
 
  %p
    (Found #{@artworks.count})
  
  - if can? :create, Artwork
    %p= link_to t('.new_artwork'), new_artwork_path

  %table.artworks
    %tbody
      - for artwork in @artworks
        %tr{ :class => cycle(:odd, :even) }
          %td= link_to image_tag(artwork.image.thumb.url), artwork
          %td= link_to basic_title(artwork), artwork
