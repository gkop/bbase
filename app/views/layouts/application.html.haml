!!! html
%html
  %head
    %title
      Bbase
    = stylesheet_link_tag :all
    = javascript_include_tag 'external/lazyload-min.js'
    = csrf_meta_tag
  
  %body
    #contents
      #header
        .top
          = render 'devise/menu/menu'
        .bottom
          - if current_user
            Berta Golahny
          - else
            Welcome
   
      - if current_user 
        #sidebar-menu
          -#
            %a{:href => "#"}
              .item
                ABOUT THIS SITE
            %a{:href => "#"}
              .item
                BIOGRAPHY
          %a{:href => exhibitions_path}
            .item
              GALLERIES
          %a{:href => artworks_path}
            .item
              ARTWORKS
          %a{:href => artworks_path(:tags => ['painting'])}
            .sub.item
              Paintings
          %a{:href => artworks_path(:tags => ['print'])}
            .sub.item
              Prints
          %a{:href => artworks_path(:tags => ['sculpture'])}
            .sub.item
              Sculpture
          -#
            %a{:href => "#"}
              .item
                RESOURCES
            %a{:href => "#"}
              .item
                TERMS OF USE
            %a{:href => "#"}
              .item
                HELP / FAQs
            %a{:href => "#"}
              .item
                CONTACT

      #main
        #inner
          %p.notice{:style => "color: green"}= notice
          %p.alert{:style => "color: red"}= alert
  
          = yield
 
      #footer
        - if current_user
          = link_to "about", about_path
          |
          = link_to "contact", contact_path
          -#
            = link_to "resources", "#"
            |
            = link_to "terms of use", "#"
            |
            = link_to "help", "#"
            |
          - if current_user.admin?
            |
            = link_to "invite somebody", new_user_invitation_path
