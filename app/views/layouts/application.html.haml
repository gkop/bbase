    = csrf_meta_tag
  
  %body
    #contents
      #header
        .top
          = render 'devise/menu/menu'
        .bottom
          Berta Golahny
    
      #sidebar-menu
        %a{:href => "#"}
          .item
            ABOUT THIS SITE
        %a{:href => "#"}
          .item
            BIOGRAPHY
        %a{:href => "#"}
